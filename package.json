{
  "name": "comedy-connect-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "NEXT_DISABLE_TURBOPACK=1 next dev",
    "dev:backend": "cd packages/backend && npm run dev",
    "build": "npx prisma generate && next build",
    "build:backend": "cd packages/backend && npm run build",
    "start": "next start",
    "lint": "eslint",
    "cleanup-db": "node scripts/cleanup-database.js",
    "setup-admin": "./scripts/setup-admin.sh",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm run test",
    "test:backend:unit": "cd packages/backend && npm run test:unit",
    "test:backend:integration": "cd packages/backend && npm run test:integration",
    "test:backend:security": "cd packages/backend && npm run test:security",
    "test:backend:coverage": "cd packages/backend && npm run test:coverage",
    "test:frontend": "cd packages/frontend && npm run test",
    "test:frontend:watch": "cd packages/frontend && npm run test:watch",
    "test:frontend:coverage": "cd packages/frontend && npm run test:coverage",
    "test:e2e": "cd testing/e2e && npx playwright test",
    "test:e2e:headed": "cd testing/e2e && npx playwright test --headed",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.0",
    "@cloudinary/url-gen": "^1.22.0",
    "@prisma/client": "^6.19.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.5",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "next": "16.1.4",
    "next-auth": "^4.24.7",
    "nodemailer": "^7.0.12",
    "prisma": "^6.19.2",
    "razorpay": "^2.9.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "supertest": "^7.2.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}