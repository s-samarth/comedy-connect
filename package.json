{
  "name": "comedy-connect-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "NEXT_DISABLE_TURBOPACK=1 next dev",
    "dev:backend": "cd packages/backend && npm run dev",
    "build": "npx prisma generate && next build",
    "build:backend": "cd packages/backend && npm run build",
    "start": "next start",
    "lint": "eslint",
    "cleanup-db": "node scripts/cleanup-database.js",
    "setup-admin": "./scripts/setup-admin.sh",
    "test:all": "jest --config testing/jest.config.ts --runInBand",
    "test:unit": "jest --config testing/jest.config.ts --testPathPatterns='unit' --runInBand",
    "test:integration": "jest --config testing/jest.config.ts --testPathPatterns='integration' --runInBand",
    "test:security": "jest --config testing/jest.config.ts --testPathPatterns='security' --runInBand",
    "test:schema": "jest --config testing/jest.config.ts --testPathPatterns='schema' --runInBand"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.0",
    "@cloudinary/url-gen": "^1.22.0",
    "@prisma/client": "^6.19.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.5",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "next": "16.1.4",
    "next-auth": "^4.24.7",
    "nodemailer": "^7.0.12",
    "prisma": "^6.19.2",
    "razorpay": "^2.9.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "supertest": "^7.2.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}